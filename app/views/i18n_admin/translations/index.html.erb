<div class="page-list">
  <div class="page-list-heading">
    <%= t('i18n_admin.translations.choose_locale') %>
    <div class="btn-group">
      <% @locales.each do |locale| %>
        <%= link_to translations_path(locale: locale), class: "btn btn-primary#{ ' active' if current_locale == locale }" do %>
          <%= locale %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="page-list-heading">
    <div class="flextable">
      <div class="flextable-item flextable-primary">        
        <%= form_tag translations_path, method: :get do %>
          <div class="input-group filter-form">
            <%= text_field_tag :q, params[:q], class: 'form-control', placeholder: t('i18n_admin.translations.search.submit') %>
            <%= hidden_field_tag :locale, current_locale %>

            <span class="input-group-btn">
              <% if params[:q].present? %>
                <%= link_to translations_path(locale: current_locale), class: 'btn btn-icon-danger' do %>
                  <i class="fa fa-times">
                <% end %>
              <% end %>
              <button class="btn" type="submit">
                <i class="fa fa-search"></i>
              </button>
            </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="page-list-body">
    <div class="table-responsive">
      <table class=" table para-component-relation-table table-hover">
        <thead>
          <tr>
            <th width="20%"><%= t('i18n_admin.translation_set.key') %></th>
            <th width="40%"><%= t('i18n_admin.translation_set.original', default_locale: I18n.default_locale) %></th>
            <th width="40%"><%= t('i18n_admin.translation_set.translation') %></th>
          </tr>
        </thead>
        <tbody>
          <%= render @translations  %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="page-list-footer">
    <%= render partial: 'pagination', locals: { translations: @translations } %>
  </div>
</div>
